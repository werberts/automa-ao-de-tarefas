import pyautogui as posicaodoMause
import datetime
import selenium



def documentacao_solidaria ():
    posicaodoMause.sleep(2) # tempo para iniciar funçao

    # funçao para definIR  O GOOGLE  CHROME

    posicaodoMause.moveTo(x=557, y=755)
    posicaodoMause.click(x=557, y=755)  # funçao para o mouse clicar na aba
    posicaodoMause.sleep(2)  # ESSA FUNÇAO E PARA DEFINIR O TEMPO DE EXECUÇAO

    return (' finalizada... ')


